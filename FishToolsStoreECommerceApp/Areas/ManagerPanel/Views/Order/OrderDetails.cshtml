@model IEnumerable<FishToolsStoreECommerceApp.Models.OrderDetail>

@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="breadCrumb">
    <a href="@Url.Action("Index", "Home")">Anasayfa</a> >
    <a href="@Url.Action("Index", "Order")">Siparişler</a> >
    <label>Sipariş Detayı</label>
</div>

<div class="pageContent">
    <div class="pagetitle">
    </div>
    <div class="formContent">
        <h3>@ViewBag.id No'lu Siparişin Detayları</h3>
        @foreach (var item in Model)
        {
            <table border="1" cellpadding="5" cellspacing="0" style="border:1px solid silver; margin-bottom:20px" width="600">
                <tr>
                    <th align="left" width="30%">Sipariş ID</th>
                    <td>@item.Order_ID</td>
                </tr>
                <tr>
                    <th align="left">Ürün ID</th>
                    <td>@item.Product_ID</td>
                </tr>
                <tr>
                    <th align="left">Ürün Adı</th>
                    <td>@item.Product.Name</td>
                </tr>
                <tr>
                    <th align="left">Birim Fiyat</th>
                    <td>@item.UnitPrice</td>
                </tr>
                <tr>
                    <th align="left">Adet</th>
                    <td>@item.Quantity</td>
                </tr>
            </table>
        }
    </div>
    <div class="formfooter">
        @Html.ActionLink("Sipariş Listesine Dön", "Index")
    </div>
</div>
@section styles
{
    <link href="~/Areas/ManagerPanel/Assets/css/FormStyle.css" rel="stylesheet" />
}
