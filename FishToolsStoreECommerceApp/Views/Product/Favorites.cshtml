
@model List<FishToolsStoreECommerceApp.Models.Product>
@{
    ViewBag.Title = "Favorites";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="breadCrumb">
    <a href="@Url.Action("Index", "Home")">Anasayfa</a> >
    <label>Profil</label> >
    <label>Favoriler</label>
</div>
<div class="mainBase">
    <div class="categoriesBase">
        <div class="title">
            Kullanıcı Menüsü
        </div>
        <div class="content">
            <a href="@Url.Action("Edit","Member")">Bilgilerim</a>
            <a href="@Url.Action("Favorites","Product")" class="active">Favoriler</a>
            <a href="@Url.Action("Index","ShoppingCart")">Sepetim</a>
        </div>
    </div>
    <div class="favoriteBase">
        @if (Model != null && Model.Any())
        {
            <table class="favoriteProducts">
                <tr class="headerRow">
                    <th>ÜRÜN RESMİ</th>
                    <th>Ürün Adı</th>
                    <th>FİYAT</th>
                    <th>Detaylar</th>
                </tr>
                @foreach (var product in Model)
                {
                    <tr>
                        <td style="text-align:center"><img src="~/Assets/ProductImages/@product.Image"/></td>
                        <td>@product.Name</td>
                        <td>@product.Price,00 ₺</td>
                        <td><a href="@Url.Action("Detail", "Product", new { id = product.ID })">Ürün'e git</a></td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p class="emptyFavorites">Favorilerinizde ürün bulunmamaktadır.</p>
        }
    </div>
    <div style="clear:both"></div>
</div>
